style "city_label"
{
  font_name = "Monospace 8"
}

style "notify_label"
{
  font_name = "Monospace Bold 9"
}

style "spaceship_label"
{
  font_name = "Monospace 8"
}

style "help_label"
{
  font_name = "Sans Bold 10"

  fg[PRELIGHT] = "red"
  fg[ACTIVE] = "red"
  fg[NORMAL] = "red"
  fg[INSENSITIVE] = "red"
}

style "help_link"
{
  font_name = "Sans 9"

  fg[PRELIGHT] = "blue"
  fg[ACTIVE] = "blue"
  fg[NORMAL] = "blue"
  fg[INSENSITIVE] = "blue"
}

style "help_text"
{
  font_name = "Monospace 8"

  bg[NORMAL] = { 0.9, 0.9, 0.9 }
  base[NORMAL] = { 0.9, 0.9, 0.9 }
  text[NORMAL] = "black"
}

style "chatline"
{
  font_name = "Monospace 8"
  base[NORMAL] = "white"
  text[NORMAL] = "black"
  base[INSENSITIVE] = "white"
  text[INSENSITIVE] = "black"
}

style "beta_label"
{
  font_name = "Sans Italic 10"
  fg[NORMAL] = "red"
  fg[PRELIGHT] = "red"
}

style "small_font"
{
  font_name = "Sans 9"
}

style "comment_label"
{
  font_name = "Sans Italic 9"
}

style "city_names_font"
{
  font_name = "Sans Bold 10"
}

style "city_productions_font"
{
  font_name = "Serif 10"
}

style "tooltips"
{
  font_name = "Monospace 8"
}

style "vote label"
{
  bg[NORMAL] = "#fffa70"
}

style "vote yes button"
{
  font_name = "Sans Bold 9"
  bg[NORMAL] = "#4d4"
  bg[ACTIVE] = "#4d4"
  bg[PRELIGHT] = "#7f7"
}

style "vote no button"
{
  font_name = "Sans Bold 9"
  bg[NORMAL] = "#d44"
  bg[ACTIVE] = "#d44"
  bg[PRELIGHT] = "#f77"
}

style "vote abstain button"
{
  font_name = "Sans Bold 9"
  bg[NORMAL] = "#bbb"
  bg[ACTIVE] = "#bbb"
  bg[PRELIGHT] = "#ddd"
}


widget	"Warciv*.city label"		style	"city_label"
widget	"Warciv*.notify label"		style	"notify_label"
widget	"Warciv*.spaceship label"	style	"spaceship_label"
widget	"Warciv*.help label"		style	"help_label"
widget	"Warciv*.help link"		style	"help_link"
widget	"Warciv*.help text"		style	"help_text"
widget	"Warciv*.chatline"		style	"chatline"
widget	"Warciv*.beta label"		style	"beta_label"
widget	"Warciv*.small font"		style	"small_font"
widget	"Warciv*.comment label"	style	"comment_label"
widget	"Warciv*.city names"		style	"city_names_font"
widget	"Warciv*.city productions"	style	"city_productions_font"
widget	"gtk-tooltips*.*"		style	"tooltips"

widget "Warciv*.vote label" style "vote label"
widget "Warciv*.vote yes button" style "vote yes button"
widget "Warciv*.vote no button" style "vote no button"
widget "Warciv*.vote abstain button" style "vote abstain button"
